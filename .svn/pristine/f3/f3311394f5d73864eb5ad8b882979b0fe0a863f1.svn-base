/*course info*/

.favorite-link-blocks{
    background-color: rgb(244, 244, 244);
    border-color: rgb(37, 59, 100);
}

.favorite-link-blocks .title h2 {
    margin: 5px 0 0 5px;
    padding: 0;
    text-transform: none;
    font-size: [[setting:fontblockheadersize]];
    color: [[setting:fontblockheadercolor]];
    font-weight: [[setting:fontblockheaderweight]];
    text-shadow: none;
    line-height: 40px;
}
.favorite-link-blocks .title h2:before {
    font-family: FontAwesome;
    font-size: 1.25em;
    margin-right: 0.3em;
    content: "\f0c1";
    font-weight: normal;
}
.favorite-link-blocks .title hr {
    margin: 0 0 5px; 
    border: 0;
    border-top: 1px solid [[setting:fontblockheadercolor]];
    border-bottom: 1px solid [[setting:fontblockheadercolor]];
}